<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_easyfpu/models/rules">
	<fieldset
		name="details"
		label="COM_EASYFPU_EASYFPU_DETAILS"
	>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="greeting"
			type="text"
			label="COM_EASYFPU_EASYFPU_GREETING_LABEL"
			description="COM_EASYFPU_EASYFPU_GREETING_DESC"
			size="40"
			class="inputbox validate-greeting"
			validate="greeting"
			required="true"
			default=""
		/>
		<field
			name="catid"
			type="category"
			extension="com_easyfpu"
			class="inputbox"
			default=""
			label="COM_EASYFPU_EASYFPU_FIELD_CATID_LABEL"
			description="COM_EASYFPU_EASYFPU_FIELD_CATID_DESC"
			required="true"
		>
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>
	</fieldset>
	<fields name="params">
		<fieldset
			name="params"
			label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
		>
			<field
				name="show_category"
				type="list"
				label="COM_EASYFPU_EASYFPU_FIELD_SHOW_CATEGORY_LABEL"
				description="COM_EASYFPU_EASYFPU_FIELD_SHOW_CATEGORY_DESC"
				default=""
			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		</fieldset>
	</fields>
	<fieldset
			name="accesscontrol"
			label="COM_EASYFPU_FIELDSET_RULES"
	>
    	<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
    	<field
			name="rules"
			type="rules"
			label="COM_EASYFPU_FIELD_RULES_LABEL"
			filter="rules"
			validate="rules"
			class="inputbox"
			component="com_easyfpu"
			section="message"
		/>
    </fieldset>
</form>