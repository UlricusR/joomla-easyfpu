<?xml version="1.0" encoding="utf-8"?>
<form addruleprefix="RuethInfo\Component\EasyFPU\Administrator\Rule">
	<fieldset
		name="details"
		label="COM_EASYFPU_EASYFPU_DETAILS"
	>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="name"
			type="text"
			label="COM_EASYFPU_EASYFPU_NAME_LABEL"
			description="COM_EASYFPU_EASYFPU_NAME_DESC"
			size="40"
			maxlength="100"
			class="inputbox"
			required="true"
            default=""
		/>
		<field
			name="favorite"
			type="checkbox"
			label="COM_EASYFPU_EASYFPU_FAVORITE_LABEL"
			description="COM_EASYFPU_EASYFPU_FAVORITE_DESC"
			checked="0"
		/>
		<field
			name="calories"
			type="text"
			label="COM_EASYFPU_EASYFPU_CALORIES_LABEL"
			description="COM_EASYFPU_EASYFPU_CALORIES_DESC"
			size="40"
			class="inputbox validate-numfracpos"
			validate="numfracpos"
			required="true"
            hint="COM_EASYFPU_EASYFPU_CALORIES_HINT"
			message="COM_EASYFPU_EASYFPU_ERRMSG_NUMBER_FRAC"
		/>
		<field
			name="carbs"
			type="text"
			label="COM_EASYFPU_EASYFPU_CARBS_LABEL"
			description="COM_EASYFPU_EASYFPU_CARBS_DESC"
			size="40"
			class="inputbox validate-numfracpos"
			validate="carbs"
			required="true"
            hint="COM_EASYFPU_EASYFPU_CARBS_HINT"
            message="COM_EASYFPU_EASYFPU_ERRMSG_NUMBER_FRAC"
		/>
		<field
			name="amount_small"
			type="text"
			label="COM_EASYFPU_EASYFPU_AMOUNT_SMALL_LABEL"
			description="COM_EASYFPU_EASYFPU_AMOUNT_SMALL_DESC"
			size="40"
			class="inputbox validate-numdecpos"
			validate="numdecpos"
			required="false"
            hint="COM_EASYFPU_EASYFPU_AMOUNT_SMALL_HINT"
            message="COM_EASYFPU_EASYFPU_ERRMSG_NUMBER_DEC"
		/>
		<field
			name="comment_small"
			type="text"
			label="COM_EASYFPU_EASYFPU_COMMENT_SMALL_LABEL"
			description="COM_EASYFPU_EASYFPU_COMMENT_SMALL_DESC"
			size="40"
			class="inputbox"
			required="false"
            hint="COM_EASYFPU_EASYFPU_COMMENT_SMALL_HINT"
			default=""
		/>
		<field
			name="amount_medium"
			type="text"
			label="COM_EASYFPU_EASYFPU_AMOUNT_MEDIUM_LABEL"
			description="COM_EASYFPU_EASYFPU_AMOUNT_MEDIUM_DESC"
			size="40"
			class="inputbox validate-numdecpos"
			validate="numdecpos"
			required="false"
            hint="COM_EASYFPU_EASYFPU_AMOUNT_MEDIUM_HINT"
			message="COM_EASYFPU_EASYFPU_ERRMSG_NUMBER_DEC"
		/>
		<field
			name="comment_medium"
			type="text"
			label="COM_EASYFPU_EASYFPU_COMMENT_MEDIUM_LABEL"
			description="COM_EASYFPU_EASYFPU_COMMENT_MEDIUM_DESC"
			size="40"
			class="inputbox"
			required="false"
            hint="COM_EASYFPU_EASYFPU_COMMENT_MEDIUM_HINT"
			default=""
		/>
		<field
			name="amount_large"
			type="text"
			label="COM_EASYFPU_EASYFPU_AMOUNT_LARGE_LABEL"
			description="COM_EASYFPU_EASYFPU_AMOUNT_LARGE_DESC"
			size="40"
			class="inputbox validate-numdecpos"
			validate="numdecpos"
			required="false"
            hint="COM_EASYFPU_EASYFPU_AMOUNT_LARGE_HINT"
			message="COM_EASYFPU_EASYFPU_ERRMSG_NUMBER_DEC"
		/>
		<field
			name="comment_large"
			type="text"
			label="COM_EASYFPU_EASYFPU_COMMENT_LARGE_LABEL"
			description="COM_EASYFPU_EASYFPU_COMMENT_LARGE_DESC"
			size="40"
			class="inputbox"
			required="false"
            hint="COM_EASYFPU_EASYFPU_COMMENT_LARGE_HINT"
			default=""
		/>
	</fieldset>
	<fieldset
			name="accesscontrol"
			label="COM_EASYFPU_FIELDSET_RULES"
	>
    	<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
    	<field
			name="rules"
			type="rules"
			label="COM_EASYFPU_FIELD_RULES_LABEL"
			filter="rules"
			validate="rules"
			class="inputbox"
			component="com_easyfpu"
			section="fooditem"
		/>
    </fieldset>
</form>