<?xml version="1.0" encoding="utf-8"?>
<form
    addrulepath="/administrator/components/com_easyfpu/models/rules"
>
    <fieldset
		name="details"
		label="COM_EASYFPU_EASYFPU_DETAILS"
	>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="greeting"
			type="text"
			label="COM_EASYFPU_EASYFPU_GREETING_LABEL"
			description="COM_EASYFPU_EASYFPU_GREETING_DESC"
			size="40"
			class="inputbox"
			validate="greeting"
			required="true"
               hint="COM_EASYFPU_EASYFPU_GREETING_HINT"
			default=""
		/>
        <field
			name="catid"
			type="category"
			extension="com_easyfpu"
			class="inputbox"
			default=""
			label="COM_EASYFPU_EASYFPU_FIELD_CATID_LABEL"
			description="COM_EASYFPU_EASYFPU_FIELD_CATID_DESC"
			required="true"
        >
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>
        <field
            name="message"
            type="textarea"
            rows="5"
            cols="80"
			label="COM_EASYFPU_EASYFPU_MESSAGE_LABEL"
			description="COM_EASYFPU_EASYFPU_MESSAGE_DESC"
            hint="COM_EASYFPU_EASYFPU_MESSAGE_HINT"
			required="true"
        >
        </field>
        <field
			name="captcha"
			type="captcha"
			label="COM_EASYFPU_EASYFPU_FIELD_CAPTCHA_LABEL"
			description="COM_EASYFPU_EASYFPU_FIELD_CAPTCHA_DESC"
            validate="captcha"
        >
		</field>
        <fields name="params">
            <field
                name="show_category"
                type="list"
                label="COM_EASYFPU_EASYFPU_FIELD_SHOW_CATEGORY_LABEL"
                description="COM_EASYFPU_EASYFPU_FIELD_SHOW_CATEGORY_DESC"
                default=""
                useglobal="true"
            >
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
        </fields>
    </fieldset>
</form>