<?xml version="1.0" encoding="utf-8"?>
<form
    addrulepath="/administrator/components/com_easyfpu/models/rules"
>
    <fieldset
		name="details"
		label="COM_EASYFPU_EASYFPU_DETAILS"
	>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="name"
			type="text"
			label="COM_EASYFPU_EASYFPU_NAME_LABEL"
			description="COM_EASYFPU_EASYFPU_NAME_DESC"
			size="40"
			class="inputbox"
			validate="name"
			required="true"
            hint="COM_EASYFPU_EASYFPU_NAME_HINT"
			default=""
		/>
		<field
			name="favorite"
			type="checkbox"
			label="COM_EASYFPU_EASYFPU_FAVORITE_LABEL"
			description="COM_EASYFPU_EASYFPU_FAVORITE_DESC"
			checked="0"
		/>
		<field
			name="calories"
			type="text"
			label="COM_EASYFPU_EASYFPU_CALORIES_LABEL"
			description="COM_EASYFPU_EASYFPU_CALORIES_DESC"
			size="40"
			class="inputbox"
			required="true"
            hint="COM_EASYFPU_EASYFPU_CALORIES_HINT"
			default=""
			pattern="/^(\d+(?:[\.\,]\d{2})?)$/"
		/>
		<field
			name="carbs"
			type="text"
			label="COM_EASYFPU_EASYFPU_CARBS_LABEL"
			description="COM_EASYFPU_EASYFPU_CARBS_DESC"
			size="40"
			class="inputbox"
			required="true"
            hint="COM_EASYFPU_EASYFPU_CARBS_HINT"
			default=""
			pattern="/^(\d+(?:[\.\,]\d{2})?)$/"
		/>
		<field
			name="amount_small"
			type="text"
			label="COM_EASYFPU_EASYFPU_AMOUNT_SMALL_LABEL"
			description="COM_EASYFPU_EASYFPU_AMOUNT_SMALL_DESC"
			size="40"
			class="inputbox"
			required="false"
            hint="COM_EASYFPU_EASYFPU_AMOUNT_SMALL_HINT"
			default=""
			pattern="^\d+$"
		/>
		<field
			name="comment_small"
			type="text"
			label="COM_EASYFPU_EASYFPU_COMMENT_SMALL_LABEL"
			description="COM_EASYFPU_EASYFPU_COMMENT_SMALL_DESC"
			size="40"
			maxlength="100"
			class="inputbox"
			validate="name"
			required="false"
            hint="COM_EASYFPU_EASYFPU_COMMENT_SMALL_HINT"
			default=""
		/>
		<field
			name="amount_medium"
			type="text"
			label="COM_EASYFPU_EASYFPU_AMOUNT_MEDIUM_LABEL"
			description="COM_EASYFPU_EASYFPU_AMOUNT_MEDIUM_DESC"
			size="40"
			class="inputbox"
			required="false"
            hint="COM_EASYFPU_EASYFPU_AMOUNT_MEDIUM_HINT"
			default=""
			pattern="^\d+$"
		/>
		<field
			name="comment_medium"
			type="text"
			label="COM_EASYFPU_EASYFPU_COMMENT_MEDIUM_LABEL"
			description="COM_EASYFPU_EASYFPU_COMMENT_MEDIUM_DESC"
			size="40"
			maxlength="100"
			class="inputbox"
			validate="name"
			required="false"
            hint="COM_EASYFPU_EASYFPU_COMMENT_MEDIUM_HINT"
			default=""
		/>
		<field
			name="amount_large"
			type="text"
			label="COM_EASYFPU_EASYFPU_AMOUNT_LARGE_LABEL"
			description="COM_EASYFPU_EASYFPU_AMOUNT_LARGE_DESC"
			size="40"
			class="inputbox"
			required="false"
            hint="COM_EASYFPU_EASYFPU_AMOUNT_LARGE_HINT"
			default=""
			pattern="^\d+$"
		/>
		<field
			name="comment_large"
			type="text"
			label="COM_EASYFPU_EASYFPU_COMMENT_LARGE_LABEL"
			description="COM_EASYFPU_EASYFPU_COMMENT_LARGE_DESC"
			size="40"
			maxlength="100"
			class="inputbox"
			validate="name"
			required="false"
            hint="COM_EASYFPU_EASYFPU_COMMENT_LARGE_HINT"
			default=""
		/>
        <field
			name="catid"
			type="category"
			extension="com_easyfpu"
			class="inputbox"
			default=""
			label="COM_EASYFPU_EASYFPU_FIELD_CATID_LABEL"
			description="COM_EASYFPU_EASYFPU_FIELD_CATID_DESC"
			required="true"
        >
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>
        <field
            name="message"
            type="textarea"
            rows="5"
            cols="80"
			label="COM_EASYFPU_EASYFPU_MESSAGE_LABEL"
			description="COM_EASYFPU_EASYFPU_MESSAGE_DESC"
            hint="COM_EASYFPU_EASYFPU_MESSAGE_HINT"
			required="true"
        >
        </field>
        <field
			name="captcha"
			type="captcha"
			label="COM_EASYFPU_EASYFPU_FIELD_CAPTCHA_LABEL"
			description="COM_EASYFPU_EASYFPU_FIELD_CAPTCHA_DESC"
            validate="captcha"
        >
		</field>
        <fields name="params">
            <field
                name="show_category"
                type="list"
                label="COM_EASYFPU_EASYFPU_FIELD_SHOW_CATEGORY_LABEL"
                description="COM_EASYFPU_EASYFPU_FIELD_SHOW_CATEGORY_DESC"
                default=""
                useglobal="true"
            >
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
        </fields>
    </fieldset>
</form>